generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meal {
  id Int @id @default(autoincrement())
  title String
  type String
  starter String
  desert String
  imageUrl String
  drinks Drink[]
}

model Drink {
  id Int @id @default(autoincrement())
  title String
  imageUrl String
  meal Meal? @relation(fields: [mealId], references: [id])
  mealId  Int?
}

model Order {
  id Int @id @default(autoincrement())
  mealIds String[]
  drinkIds String[]
}